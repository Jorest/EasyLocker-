<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="Settings"
        android:defaultValue="true"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
    <intent
        android:action="com.android.app.util."
        android:targetPackage="my.notifier.ui"
        android:targetClass="my.notifier.ui.EditCoursesNamesActivity" />
    />




    <SwitchPreference android:title="activar easyLocker"
        android:summaryOn="EasyLocker active"
        android:summaryOff="EasyLock unactive"/>


    <CheckBoxPreference android:title="Application Updates"
        android:defaultValue="false"
        android:summary="This option if selected will allow the application to check for latest versions."
        android:key="applicationUpdates" />


   <ListPreference     android:title="Clock type"
        android:summary="Select the kind of clock"
        android:key="@string/abc_action_bar_home_description"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />

</PreferenceScreen>